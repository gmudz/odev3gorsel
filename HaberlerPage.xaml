<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odev3gorsel.HaberlerPage"
             Title="Haberler"
             BackgroundColor="#E0F2F1">

    <Grid RowDefinitions="Auto, *">
        
        <!-- Kategori ButonlarÄ± -->
        <Frame Grid.Row="0" BackgroundColor="#00897B" CornerRadius="0" Padding="5" HasShadow="True">
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="8" Padding="10">
                    <Button Text="ðŸ“° ManÅŸet" Clicked="Kategori_Clicked" CommandParameter="manset" 
                            BackgroundColor="#00695C" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="âš¡ Son Dakika" Clicked="Kategori_Clicked" CommandParameter="sondakika" 
                            BackgroundColor="#00695C" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="ðŸ“‹ GÃ¼ndem" Clicked="Kategori_Clicked" CommandParameter="gundem" 
                            BackgroundColor="#00695C" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="ðŸ’¹ Ekonomi" Clicked="Kategori_Clicked" CommandParameter="ekonomi" 
                            BackgroundColor="#00695C" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="âš½ Spor" Clicked="Kategori_Clicked" CommandParameter="spor" 
                            BackgroundColor="#00695C" TextColor="White" CornerRadius="20" FontSize="13"/>
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>

        <!-- Haber Listesi -->
        <CollectionView x:Name="HaberList" Grid.Row="1" SelectionMode="Single" SelectionChanged="Haber_Selected" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White" CornerRadius="15" Margin="0,5" Padding="0" HasShadow="True">
                        <Grid ColumnDefinitions="120, *" RowDefinitions="Auto">
                            
                            <!-- Haber Resmi -->
                            <Border StrokeShape="RoundRectangle 15,0,0,15" 
                                    HeightRequest="110"
                                    StrokeThickness="0">
                                <Image Source="{Binding Thumbnail}" 
                                       Aspect="AspectFill"/>
                            </Border>
                            
                            <!-- Haber DetaylarÄ± -->
                            <VerticalStackLayout Grid.Column="1" Padding="12" VerticalOptions="Center" Spacing="8">
                                <Label Text="{Binding Title}" 
                                       FontAttributes="Bold" 
                                       MaxLines="2" 
                                       LineBreakMode="TailTruncation"
                                       TextColor="#00695C"
                                       FontSize="14"/>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="ðŸ•" FontSize="12"/>
                                    <Label Text="{Binding PubDate}" 
                                           FontSize="12" 
                                           TextColor="#757575"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>