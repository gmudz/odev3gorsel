<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odev3gorsel.HaberlerPage"
             Title="Haberler"
             BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#1a1a1a}">

    <Grid RowDefinitions="Auto, *">
        
        <!-- Kategori Butonları -->
        <Frame Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#004D40}" CornerRadius="0" Padding="5" HasShadow="True">
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="8" Padding="10">
                    <Button Text="Manset" Clicked="Kategori_Clicked" CommandParameter="manset" 
                            BackgroundColor="{AppThemeBinding Light=#00695C, Dark=#00796B}" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="Son Dakika" Clicked="Kategori_Clicked" CommandParameter="sondakika" 
                            BackgroundColor="{AppThemeBinding Light=#00695C, Dark=#00796B}" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="Gundem" Clicked="Kategori_Clicked" CommandParameter="gundem" 
                            BackgroundColor="{AppThemeBinding Light=#00695C, Dark=#00796B}" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="Ekonomi" Clicked="Kategori_Clicked" CommandParameter="ekonomi" 
                            BackgroundColor="{AppThemeBinding Light=#00695C, Dark=#00796B}" TextColor="White" CornerRadius="20" FontSize="13"/>
                    <Button Text="Spor" Clicked="Kategori_Clicked" CommandParameter="spor" 
                            BackgroundColor="{AppThemeBinding Light=#00695C, Dark=#00796B}" TextColor="White" CornerRadius="20" FontSize="13"/>
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>

        <!-- Haber Listesi -->
        <CollectionView x:Name="HaberList" Grid.Row="1" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2d2d2d}" CornerRadius="15" Margin="0,5" Padding="0" HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Haber_Tapped" CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <Grid ColumnDefinitions="120, *" RowDefinitions="Auto">
                            
                            <!-- Haber Resmi -->
                            <Border StrokeShape="RoundRectangle 15,0,0,15" 
                                    HeightRequest="110"
                                    StrokeThickness="0">
                                <Image Source="{Binding Thumbnail}" 
                                       Aspect="AspectFill"/>
                            </Border>
                            
                            <!-- Haber Detayları -->
                            <VerticalStackLayout Grid.Column="1" Padding="12" VerticalOptions="Center" Spacing="8">
                                <Label Text="{Binding Title}" 
                                       FontAttributes="Bold" 
                                       MaxLines="2" 
                                       LineBreakMode="TailTruncation"
                                       TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"
                                       FontSize="14"/>
                                <Label Text="{Binding PubDate}" 
                                       FontSize="12" 
                                       TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"/>
                            </VerticalStackLayout>
                            
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>