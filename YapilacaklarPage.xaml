<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odev3gorsel.YapilacaklarPage"
             Title="YapÄ±lacaklar"
             BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#1a1a1a}">

    <Grid RowDefinitions="Auto, *">
        
        <!-- BaÅŸlÄ±k ve Ekleme Butonu -->
        <Frame Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#004D40}" CornerRadius="0" Padding="15" HasShadow="True">
            <Grid ColumnDefinitions="*, Auto">
                <Label Text="ðŸ“ YapÄ±lacaklar" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="âž•" 
                        Clicked="AddNew_Clicked"
                        BackgroundColor="{AppThemeBinding Light=#00695C, Dark=#26A69A}"
                        TextColor="White"
                        FontSize="20"
                        CornerRadius="25"
                        HeightRequest="50"
                        WidthRequest="50"/>
            </Grid>
        </Frame>

        <!-- GÃ¶rev Listesi -->
        <CollectionView x:Name="TodoCollection" Grid.Row="1" Margin="10">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="ðŸ“‹" FontSize="48" HorizontalOptions="Center"/>
                    <Label Text="HenÃ¼z gÃ¶rev eklenmemiÅŸ" 
                           FontSize="16" 
                           TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"
                           HorizontalOptions="Center"/>
                    <Label Text="SaÄŸ Ã¼stteki + butonuna tÄ±klayarak gÃ¶rev ekleyin" 
                           FontSize="12" 
                           TextColor="{AppThemeBinding Light=#999999, Dark=#777777}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2d2d2d}" CornerRadius="12" Margin="0,5" Padding="12" HasShadow="True">
                        <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10">
                            
                            <!-- Tamamlanma Checkbox -->
                            <CheckBox IsChecked="{Binding IsCompleted}" 
                                      CheckedChanged="CheckBox_CheckedChanged"
                                      Color="{AppThemeBinding Light=#00897B, Dark=#4DB6AC}"
                                      VerticalOptions="Center"/>
                            
                            <!-- GÃ¶rev Bilgileri - TÄ±klanabilir -->
                            <VerticalStackLayout Grid.Column="1" Spacing="3">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TodoItem_Tapped" CommandParameter="{Binding .}"/>
                                </VerticalStackLayout.GestureRecognizers>
                                
                                <Label Text="{Binding TaskName}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                                <Label Text="{Binding Detail}" 
                                       FontSize="13"
                                       TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"
                                       MaxLines="1"
                                       LineBreakMode="TailTruncation"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" 
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light=#00897B, Dark=#80CBC4}"/>
                                    <Label Text="{Binding Time, StringFormat='{0:hh\\:mm}'}" 
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light=#00897B, Dark=#80CBC4}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <!-- Silme Butonu -->
                            <Button Grid.Column="2" 
                                    Text="ðŸ—‘ï¸" 
                                    Clicked="DeleteTodo_Clicked" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#4A1515}" 
                                    TextColor="{AppThemeBinding Light=#C62828, Dark=#EF9A9A}"
                                    CornerRadius="10"
                                    HeightRequest="40"
                                    WidthRequest="45"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>