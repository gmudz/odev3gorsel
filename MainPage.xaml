<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odev3gorsel.MainPage"
             Title="Ana Sayfa"
             BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#1a1a1a}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header Card -->
            <Frame BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#004D40}" 
                   CornerRadius="20" Padding="25" HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="BSM322" 
                           FontSize="16" 
                           TextColor="#B2DFDB"/>
                    <Label Text="Gorsel Programlama" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="Odev-3 Mobil Uygulama" 
                           FontSize="14" 
                           TextColor="#80CBC4"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Profile Card -->
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2d2d2d}" 
                   CornerRadius="25" Padding="30" HasShadow="True">
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                    
                    <!-- Profile Image with Gradient Border -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#26A69A}" 
                           CornerRadius="80" 
                           HeightRequest="160" 
                           WidthRequest="160" 
                           Padding="5"
                           HasShadow="True"
                           HorizontalOptions="Center">
                        <Border StrokeShape="RoundRectangle 75" 
                                StrokeThickness="0"
                                HeightRequest="150" 
                                WidthRequest="150">
                            <Image Source="resim.png" Aspect="AspectFill"/>
                        </Border>
                    </Frame>

                    <!-- Name -->
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Label Text="Murad Ashkar" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                        <Label Text="Ogrenci" 
                               FontSize="14" 
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"/>
                    </VerticalStackLayout>

                    <!-- Student Number Badge -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#004D40}" 
                           CornerRadius="25" 
                           Padding="20,12" 
                           HasShadow="False"
                           HorizontalOptions="Center">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="🎓" FontSize="18"/>
                            <Label Text="22670310208" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#00695C, Dark=#B2DFDB}"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Divider -->
                    <BoxView HeightRequest="1" 
                             BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#444444}" 
                             Margin="20,5"/>

                    <!-- University Info -->
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="🏛️" FontSize="16"/>
                            <Label Text="Bartin Universitesi" 
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="💻" FontSize="14"/>
                            <Label Text="Bilgisayar Muhendisligi Bolumu"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Academic Year Card -->
            <Frame BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A5F}" 
                   CornerRadius="15" Padding="20" HasShadow="True">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="📅" FontSize="28" VerticalOptions="Center"/>
                    <VerticalStackLayout Spacing="3">
                        <Label Text="2025-2026" 
                               FontSize="22" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1565C0, Dark=#64B5F6}"/>
                        <Label Text="Akademik Yil" 
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label Text="© 2025 - Tum haklari saklidir" 
                   FontSize="11" 
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#9E9E9E, Dark=#666666}"
                   Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>