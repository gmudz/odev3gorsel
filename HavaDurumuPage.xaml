<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odev3gorsel.HavaDurumuPage"
             Title="HavaDurumu"
             BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#1a1a1a}">

    <Grid RowDefinitions="Auto, *">
        
        <!-- Baslik ve Butonlar -->
        <Frame Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#004D40}" 
               CornerRadius="0" Padding="10" HasShadow="True">
            <Grid ColumnDefinitions="*, Auto, Auto">
                <Label Text="HavaDurumu" FontSize="20" FontAttributes="Bold" 
                       TextColor="White" VerticalOptions="Center"/>
                
                <Button Grid.Column="1" Text="+" FontSize="24" 
                        Clicked="AddCity_Clicked"
                        BackgroundColor="#4CAF50" TextColor="White"
                        WidthRequest="45" HeightRequest="45" CornerRadius="8"
                        Margin="5,0"/>
                
                <Button Grid.Column="2" Text="â†»" FontSize="20"
                        Clicked="Refresh_Clicked"
                        BackgroundColor="#2196F3" TextColor="White"
                        WidthRequest="45" HeightRequest="45" CornerRadius="8"/>
            </Grid>
        </Frame>

        <!-- Sehir Listesi -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="CitiesStack" Spacing="15" Padding="10">
            </VerticalStackLayout>
        </ScrollView>
        
    </Grid>
</ContentPage>