<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="odev3gorsel.TodoDetayPage"
             Title="Gorev Detayi"
             BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#1a1a1a}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Frame BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#004D40}" 
                   CornerRadius="15" Padding="15" HasShadow="True">
                <Label Text="Gorev Detayi" FontSize="22" FontAttributes="Bold" 
                       TextColor="White" HorizontalOptions="Center"/>
            </Frame>
            
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#2d2d2d}" 
                   CornerRadius="15" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="Gorev:" FontSize="14" FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3d3d3d}" 
                           CornerRadius="10" Padding="10" HasShadow="False">
                        <Entry x:Name="GorevEntry" Placeholder="Gorev basligi girin" FontSize="16" 
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                               PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"/>
                    </Frame>
                    
                    <Label Text="Detay:" FontSize="14" FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3d3d3d}" 
                           CornerRadius="10" Padding="10" HasShadow="False">
                        <Editor x:Name="DetayEditor" Placeholder="Detay girin" HeightRequest="100" FontSize="14" 
                                TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"/>
                    </Frame>
                    
                    <Label Text="Tarih:" FontSize="14" FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3d3d3d}" 
                           CornerRadius="10" Padding="5" HasShadow="False">
                        <DatePicker x:Name="TarihPicker" 
                                    TextColor="{AppThemeBinding Light=#333333, Dark=White}" 
                                    Format="dd/MM/yyyy"/>
                    </Frame>
                    
                    <Label Text="Saat:" FontSize="14" FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=#00695C, Dark=#4DB6AC}"/>
                    <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3d3d3d}" 
                           CornerRadius="10" Padding="5" HasShadow="False">
                        <TimePicker x:Name="SaatPicker" 
                                    TextColor="{AppThemeBinding Light=#333333, Dark=White}" 
                                    Format="HH:mm"/>
                    </Frame>
                    
                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10" Margin="0,10,0,0">
                        <Button x:Name="TamamBtn" Text="Tamam" Clicked="Tamam_Clicked" 
                                BackgroundColor="{AppThemeBinding Light=#00897B, Dark=#26A69A}" 
                                TextColor="White" FontAttributes="Bold" CornerRadius="10" HeightRequest="50"/>
                        <Button Text="Iptal" Grid.Column="1" Clicked="Iptal_Clicked" 
                                BackgroundColor="{AppThemeBinding Light=#E57373, Dark=#C62828}" 
                                TextColor="White" FontAttributes="Bold" CornerRadius="10" HeightRequest="50"/>
                    </Grid>
                    
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>